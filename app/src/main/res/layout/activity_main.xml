<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Space
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:id="@+id/spacer"/>

    <TextView
        android:id="@+id/tvTodos"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:text="TODOS"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/spacer"
        tools:layout_editor_absoluteX="183dp"
        app:layout_editor_absoluteY="184dp"
        />

    <View
        android:id="@+id/Sircle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_sircle"
        app:layout_constraintTop_toTopOf="@+id/tvClean"
        android:layout_marginTop="22dp"
        app:layout_editor_absoluteX="327dp"
        />


    <TextView
        android:id="@+id/tvClean"
        android:layout_width="378dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@id/tvTodos"
        app:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteX="16dp"
        tools:text="Clean house" />

    <View
        android:id="@+id/Sircle2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_sircle"
        app:layout_constraintTop_toTopOf="@+id/tvHomework"
        android:layout_marginTop="22dp"
        app:layout_editor_absoluteX="327dp"
        />
    <TextView
        android:layout_width="378dp"
        android:layout_height="66dp"
        android:layout_marginTop="28dp"
        app:layout_editor_absoluteX="16dp"
        android:text="Do homework"
        android:id="@+id/tvHomework"
        app:layout_constraintTop_toBottomOf="@id/tvClean"
        />

    <View
        android:id="@+id/Sircle3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_sircle"
        app:layout_constraintTop_toTopOf="@+id/tvgroceries"
        android:layout_marginTop="22dp"
        app:layout_editor_absoluteX="327dp"
        />
    <TextView
        android:layout_width="378dp"
        android:layout_height="66dp"
        android:layout_marginTop="28dp"
        android:text="By groceries"
        app:layout_editor_absoluteX="16dp"
        android:id="@+id/tvgroceries"
        app:layout_constraintTop_toBottomOf="@id/tvHomework"
        />

    <View
        android:layout_width="382dp"
        android:layout_height="85dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvgroceries"
        android:layout_marginTop="323dp"
        app:layout_editor_absoluteX="16dp"
        android:id="@+id/viewContainer"/>

</androidx.constraintlayout.widget.ConstraintLayout>